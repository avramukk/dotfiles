{
	"icon_theme": "Zed (Default)",
	"restore_on_startup": "last_session",
	"theme": "Gruvbox Dark",
	"base_keymap": "VSCode",
	"vim_mode": true,
	"confirm_quit": true,
	"use_autoclose": false,
	"cursor_blink": true,
	"hover_popover_enabled": true,
	"buffer_font_family": "JetBrainsMono Nerd Font Mono",
	"buffer_font_size": 13,
	"buffer_line_height": {
		"custom": 1.7
	},
	"soft_wrap": "prefer_line",
	"show_wrap_guides": false,
	"preferred_line_length": 120,
	"relative_line_numbers": false,
	"multi_cursor_modifier": "alt",
	"scroll_sensitivity": 1,
	"autosave": "on_focus_change",
	"hard_tabs": true,
	"show_edit_predictions": true,
	"edit_predictions": {
		// A list of globs representing files that edit predictions should be disabled for.
		// There's a sensible default list of globs already included.
		// Any addition to this list will be merged with the default list.
		"disabled_globs": ["**/.env*", "**/*.pem", "**/*.key", "**/*.cert", "**/*.crt", "**/secrets.yml"]
	},
	"scrollbar": {
		"show": "never"
	},
	"file_finder": {
		"modal_width": "small"
	},
	"gutter": {
		"visible": true,
		"code_actions": false,
		"folds": true,
		"runnables": false
	},
	"toolbar": {
		"selections_menu": false,
		"quick_actions": false,
		"breadcrumbs": false
	},
	"outline_panel": {
		"button": false
	},
	"collaboration_panel": {
		"button": false
	},
	"tab_bar": {
		"show_nav_history_buttons": false,
		"show": true
	},
	"tabs": {
		"git_status": true
	},
	"project_panel": {
		"default_width": 150,
		"indent_size": 8,
		"button": false,
		"auto_fold_dirs": false,
		"file_icons": true
	},
	"terminal": {
		"font_family": "UbuntuMono Nerd Font Mono",
		"font_size": 15,
		"line_height": {
			"custom": 1
		},
		"toolbar": {
			"title": false
		},
		"button": false,
		"copy_on_select": true
	},
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"assistant": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "claude-3-7-sonnet"
		},
		"version": "2",
		"enable_experimental_live_diffs": true
	},
	"features": {
		"edit_prediction_provider": "zed"
	},
	"inlay_hints": {
		"enabled": false
	},
	"bindings": {
		"ctrl-h": ["workspace:ActivatePanelInDirection", "Left"],
		"ctrl-l": ["workspace:ActivatePanelInDirection", "Right"],
		"ctrl-k": ["workspace:ActivatePanelInDirection", "Up"],
		"ctrl-j": ["workspace:ActivatePanelInDirection", "Down"],
		"s": "outline:Toggle",
		"space x x": "diagnostics:Deploy",
		"space space": "file_finder:Toggle"
	},
	"format_on_save": "on",
	"bracket_pairing": "never"
}
