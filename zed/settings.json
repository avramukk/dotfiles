{
	"restore_on_startup": "last_workspace",
	"theme": "Gruvbox Dark Hard",
	"base_keymap": "VSCode",
	"buffer_font_family": "UbuntuMono Nerd Font Mono",
	"buffer_font_size": 14,
	"preferred_line_length": 80,
	"vim_mode": true,
	"confirm_quit": true,
	"relative_line_numbers": false,
	"cursor_blink": true,
	"hover_popover_enabled": true,
	"soft_wrap": "editor_width",
	"show_wrap_guides": false,
	"multi_cursor_modifier": "alt",
	"scroll_sensitivity": 1,
	"autosave": "on_focus_change",
	"hard_tabs": true,
	"show_inline_completions": true,
	"scrollbar": {
		"show": "never"
	},
	"assistant": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "claude-3-5-sonnet"
		},
		"version": "2",
		"provider": {
			"name": "openai",
			"default_model": "gpt-4o-mini"
		},
		"enable_experimental_live_diffs": true
	},
	"file_finder": {
		"modal_width": "small"
	},
	"gutter": {
		"visible": true,
		"code_actions": false,
		"folds": true,
		"runnables": false
	},
	"toolbar": {
		"selections_menu": false,
		"quick_actions": false,
		"breadcrumbs": false
	},
	"outline_panel": {
		"button": false
	},
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"buffer_line_height": {
		"custom": 1.7
	},
	"collaboration_panel": {
		"button": false
	},
	"tab_bar": {
		"show_nav_history_buttons": false,
		"show": true
	},
	"tabs": {
		"git_status": true
	},
	"terminal": {
		"font_family": "UbuntuMono Nerd Font Mono",
		"font_size": 15,
		"line_height": {
			"custom": 1
		},
		"toolbar": {
			"title": false
		},
		"button": false,
		"copy_on_select": true
	},
	"inlay_hints": {
		"enabled": false
	},
	"project_panel": {
		"default_width": 200,
		"indent_size": 10,
		"button": false,
		"auto_fold_dirs": false,
		"file_icons": true
	},
	"copilot": {
		"enabled": true
	},
	"bindings": {
		"ctrl-h": ["workspace:ActivatePanelInDirection", "Left"],
		"ctrl-l": ["workspace:ActivatePanelInDirection", "Right"],
		"ctrl-k": ["workspace:ActivatePanelInDirection", "Up"],
		"ctrl-j": ["workspace:ActivatePanelInDirection", "Down"],
		"s": "outline:Toggle",
		"space x x": "diagnostics:Deploy",
		"space space": "file_finder:Toggle"
	},
	"formatter": {
		"language_server": {
			"name": "biome"
		}
	},
	"code_actions_on_format": {
		"source.fixAll.biome": true,
		"source.organizeImports.biome": true
	},
	"telemetry": {
		"enabled": false,
		"metrics": false
	},
	"prettier": {
		"printWidth": 80,
		"tabWidth": 2,
		"useTabs": false,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"proseWrap": "preserve",
		"endOfLine": "lf"
	},
	"linter": "eslint",
	"bracket_pairing": "always",
	"eslint": {
		"enabled": true,
		"autoFixOnSave": true,
		"autoFixOnFormat": true,
		"autoFixOnFormatDelay": 1500
	},
	"languages": {
		"JavaScript": {
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		},
		"TypeScript": {
			"code_actions_on_format": {
				"source.organizeImports": true,
				"source.fixAll.eslint": true
			}
		},
		"TSX": {
			"code_actions_on_format": {
				"source.organizeImports": true,
				"source.fixAll.eslint": true
			}
		}
	},
	"lsp": {
		"typescript-language-server": {
			"initialization_options": {
				"preferences": {
					"includeInlayParameterNameHints": "all",
					"includeInlayParameterNameHintsWhenArgumentMatchesName": true,
					"includeInlayFunctionParameterTypeHints": true,
					"includeInlayVariableTypeHints": true,
					"includeInlayVariableTypeHintsWhenTypeMatchesName": false,
					"includeInlayPropertyDeclarationTypeHints": true,
					"includeInlayFunctionLikeReturnTypeHints": true,
					"includeInlayEnumMemberValueHints": true
				}
			}
		}
	}
}
