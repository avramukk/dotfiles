{
  "assistant": {
    "provider": {
      "name": "openai",
      "default_model": "gpt-4o"
    }
  },
  "theme": "Gruvbox Dark Hard",
  "base_keymap": "VSCode",
  "buffer_font_family": "UbuntuMono Nerd Font Mono",
  "buffer_font_size": 15,
  "vim_mode": true,
  "relative_line_numbers": false,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": true
  },
  "buffer_line_height": {
    "custom": 1.7
  },
  "terminal": {
    "font_family": "UbuntuMono Nerd Font Mono",
    "font_size": 15,
    "line_height": {
      "custom": 1.7
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "usePlaceholders": true,
        "staticcheck": true,
        "codelenses": {
          "gc_details": true,
          "generate": true,
          "regenerate_cgo": true,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": true
        },
        "analysis": {
          "completeUnimported": true,
          "staticcheck": true,
          "unusedParams": true,
          "unusedWrite": true
        },
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "bashls": {
      "autostart": true
    },
    "bicep": {},
    "yamlls": {
      "autostart": true
    },
    "dockerls": {},
    "marksman": {},
    "powershell_es": {},
    "terraformls": {},
    "helm_ls": {},
    "jsonls": {},
    "html": {},
    "cssls": {},
    "eslint": {}
  },
  "copilot": {
    "enabled": true
  },
  "show_inline_completions": true,
  "bindings": {
    "ctrl-h": ["workspace:ActivatePanelInDirection", "Left"],
    "ctrl-l": ["workspace:ActivatePanelInDirection", "Right"],
    "ctrl-k": ["workspace:ActivatePanelInDirection", "Up"],
    "ctrl-j": ["workspace:ActivatePanelInDirection", "Down"],

    "s": "outline:Toggle",
    "space x x": "diagnostics:Deploy",
    "space space": "file_finder:Toggle"
  },
  "inline_completions": {
    "enabled": true
  },
  "autosave": "on_focus_change"
}
